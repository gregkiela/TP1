{% extends 'base.html.twig' %}

{% block title %}{{parent()}} entreprises !{% endblock %}
{% block header %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; text-align: center }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Toutes les entreprises</h1>
    </div>
{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            {% for entreprise in entreprises %}
                <div class="card">
                    <h5 class="card-header">    
                        <a href={{ path('tri_entreprise', {'id' : entreprise.id}) }} class="text-black">{{entreprise.nom}}</a>
                    </h5>
                    <div class="card-body">
                        <p class="card-text"><b>Activité :</b> {{entreprise.activite}}</p>
                        <p class="card-text"><b>Adresse :</b> {{entreprise.adresse}}</p>
                        <p class="card-text"><b>URL :</b> {{entreprise.urlSite}}</p>
                    </div>                        
                </div>                
            {% endfor %}
        </div>
        <div>
            <a href={{path('accueil')}} class="text-black">Revenir à l'accueil</a>
        </div>
    </div>
</div>
    
{% endblock %}