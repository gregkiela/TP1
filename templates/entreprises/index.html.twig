{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{% endblock %}
{% block header %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Liste des stages triés par l'entreprises</h1>
    </div>
{% endblock %}
{% block body %}
    <div>
        <p>Voici la liste des stages triés pour l'entreprise {{entreprise.nom}} :</p>
    </div>
    <div>
        <ul>
        {% for stage in stages %}
            <li><a href=.././stages/{{stage.id}})>{{stage.titre}}</a></li>
        {% endfor %}
        </ul>
    </div>
    <div>
        <a href={{path('accueil')}}>Revenir à l'accueil</a>
    </div>
{% endblock %}