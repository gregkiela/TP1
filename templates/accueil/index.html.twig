{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{% endblock %}
{% block header %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; text-align: center }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Bienvenue sur la page d'accueil de ProStages!</h1>
    </div>
{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">              
        <div class="col-md-4">
            {% block entreprises %}  
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <h5 class="card-header">    
                                Entreprises
                            </h5>
                            <div class="card-body">
                                <ul class="list-unstyled">
                                    {% for entreprise in entreprises %}
                                        <div class="row">
                                            <div class="col-md-4">
                                                <li>{{entreprise.nom}}</li>
                                            </div>
                                            <div class="col-md-4">                                        
                                                <a href=/entreprises/{{entreprise.id}}> Trier par</a>
                                            </div>
                                            <div class="col-md-4">
                                                <a href=/description/entreprise/{{entreprise.id}}> Détails</a>
                                            </div>
                                        </div>                                        
                                    {% endfor %}
                                </ul>
                            </div>                        
                        </div>
                    </div>
                </div>                              
            {% endblock %}

            {% block formations %}   
                <div class="row">
                    <div class="col-md-12">
                    <div class="card">
                            <h5 class="card-header">    
                                Formations
                            </h5>
                            <div class="card-body">
                                <ul class="list-unstyled">
                                    {% for formation in formations %}
                                        <div class="row">
                                            <div class="col-md-4">
                                                <li>{{formation.nomCourt}}</li>
                                            </div>
                                            <div class="col-md-4">                                        
                                                <a href=/formations/{{formation.id}}> Trier par</a>
                                            </div>
                                            <div class="col-md-4">
                                                <a href=/description/formation/{{formation.id}}> Détails</a>
                                            </div>
                                        </div>  
                                    {% endfor %}
                                </ul>
                            </div>                        
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
        {% block stages %} 
            <div class="col-md-8">
                {% for stage in stages %}
                    <div class="card">
                        <h5 class="card-header">    
                            <a href=/stages/{{stage.id}} class="text-decoration-none">{{stage.titre}}</a>
                        </h5>
                        <div class="card-body">
                            <p class="card-text">{{stage.description}}</p>
                        </div>                        
                    </div>                
                {% endfor %}
            </div>    
        {% endblock %}
    </div>
</div>
{% endblock %}
