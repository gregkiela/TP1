{% extends 'base.html.twig' %}

{% block title %}{{parent()}} détail du stage !{% endblock %}
{% block header %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; text-align: center }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Détails du stage</h1>
    </div>
{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">              
        <div class="col-md-4">
            {% block entreprises %}  
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <h5 class="card-header">
                                <a href=/entreprises class= "text-black"> Entreprises</a>                               
                            </h5>
                            <div class="card-body">
                                <ul class="list-unstyled">
                                    {% for entreprise in entreprises %}
                                        <div class="row">
                                            <div class="col-md-12">
                                                <li><a href={{ path('tri_entreprise', {'id' : entreprise.id}) }} class="text-black">{{entreprise.nom}}</a></li>
                                            </div>
                                        </div>                                        
                                    {% endfor %}
                                </ul>
                            </div>                        
                        </div>
                    </div>
                </div>                              
            {% endblock %}

            {% block formations %}   
                <div class="row">
                    <div class="col-md-12">
                    <div class="card">
                            <h5 class="card-header">    
                                <a href=/formations class= "text-black"> Formations</a>
                            </h5>
                            <div class="card-body">
                                <ul class="list-unstyled">
                                    {% for formation in formations %}
                                        <div class="row">
                                            <div class="col-md-12">
                                                <li><a href={{ path('tri_formation', {'id' : formation.id}) }}) class="text-black">{{formation.nomCourt}}</a></li>
                                            </div>
                                        </div>  
                                    {% endfor %}
                                </ul>
                            </div>                        
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
        {% block stages %} 
            <div class="col-md-8">
                <div class="row">
				<div class="col-md-12">
					<h4>
						Intitulé du stage
					</h4>
					<p>
                        {{stage.titre}}
                    </p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<h4>
						Description de la mission
					</h4>
					<p>
                        {{stage.description}}
                    </p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<h4>
						Mail de contact
					</h4>
					<p>
                        {{stage.email}}					
                    </p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<h4>
						Entreprise concernée
					</h4>
					<p>
						<a href={{ path('tri_entreprise', {'id' : entreprise.id}) }} class="text-black"> {{entreprise.nom}}</a>				
                    </p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<h4>
						Formation(s) concernée(s)
					</h4>
					<p>
                        {% for formation in formationsStage %}
                            <div class="row">
								<div class="col-md-12">
									<li><a href={{ path('tri_formation', {'id' : formation.id}) }} class="text-black"> {{formation.nomCourt}}</a></li>
								</div>
							</div>  
                        {% endfor %}					
                    </p>
				</div>
			</div>
            <div>
                <a href={{path('accueil')}} class="text-black">Revenir à l'accueil</a>
            </div>
            </div>    
        {% endblock %}
    </div>
</div>

{% endblock %}