{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{% endblock %}
{% block header %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="text-center">
        <h1>Détail sur le stage</h1>
    </div>
{% endblock %}
{% block body %}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-12">
					<h4>
						Titre du stage
					</h4>
					<p>
                        {{stage.titre}}
                    </p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<h4>
						Description de la mission
					</h4>
					<p>
                        {{stage.description}}
                    </p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<h4>
						Mail de contact
					</h4>
					<p>
                        {{stage.email}}					
                    </p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<h4>
						Entreprise concernée
					</h4>
					<p>
                        <a href = .././entreprises/{{entreprise.id}}>{{entreprise.nom}}</a>				
                    </p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<h4>
						Formations concernées
					</h4>
					<p>
                        {% for formation in formations %}
                            <a href = .././formations/{{formation.id}}>{{formation.nomCourt}}</a><br>
                        {% endfor %}					
                    </p>
				</div>
			</div>
            <div>
                <a href=.././>Revenir à l'accueil</a>
            </div>
		</div>
	</div>
</div>
{% endblock %}