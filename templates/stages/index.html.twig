{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{% endblock %}
{% block header %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Bienvenue sur la page du stage {{ id }}</h1>
    </div>
{% endblock %}
{% block body %}
    <div>
        <p>Voici les détail du stage :</p>
    </div>
    <div>
        <h1>Titre</h1>
        {{stage.titre}}
        <h1>Description</h1>
        {{stage.description}}
        <h1>Mail</h1>
        {{stage.email}}
        <h1>Entreprise</h1>
        <a href = .././entreprises/{{entreprise.id}}>{{entreprise.nom}}</a>
        <h1>Formation(s)</h1>
        {% for formation in formations %}
        <a href = .././formations/{{formation.id}}>{{formation.nomCourt}}</a><br>
        {% endfor %}
    </div>
    <div>
        <a href=.././>Revenir à l'accueil</a>
    </div>
{% endblock %}