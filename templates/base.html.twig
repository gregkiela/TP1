<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                ProStages{% endblock %}
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {# BLOC DES FEUILLES DE STYLE #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <link rel="stylesheet" href="{{asset('/css/fontello.css')}}">
        {% endblock %}

        {# BLOC JAVASCRIPT #}
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
            crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" 
            integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" 
            crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" 
            integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" 
            crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <header>
        {% block header %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6 offset-3">
                        <h1 class="display-1 text-center my-auto">
                            ProStages                 
                            <img alt="imageTravail" src="https://www.brest.fr/fileadmin/imported_for_brest/fileadmin/Images/Demarches/pictos/Picto_Travail.png" height="150" weight="150" class="img" />
                        </h1>
                    </div>
                </div>
            </div>
        {% endblock %}
    </header>
    <body>
        {% block navbar %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                            <a class="navbar-brand" href={{path("accueil")}}>
                                Accueil
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav mr-auto">
                                    <li class="nav-item active">
                                        <a class="nav-link" href={{path("entreprises")}}>
                                            Entreprises <i class="icon-briefcase"></i>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href={{path("formation_index")}}>
                                            Formations <i class="icon-graduation-cap"></i>
                                        </a>
                                    </li>
                                    {% if is_granted('ROLE_USER') %}
                                    <li class="nav-item">
                                        <a class="nav-link" href={{path("app_logout")}}>
                                            Déconnexion <i class="icon-user-times"></i>
                                        </a>
                                    </li>
                                    {% else %}
                                    <li class="nav-item">
                                        <a class="nav-link" href={{path("app_login")}}>
                                            Connexion <i class="icon-user"></i>
                                        </a>
                                    </li>
                                        <li class="nav-item">
                                        <a class="nav-link" href={{path("app_inscription")}}>
                                            Inscription <i class="icon-user-plus"></i>
                                        </a>
                                    </li>
                                    {% endif %}
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block contenu %}{% endblock %}
    </body>
    <footer page-footer>
        {% block footer %}
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-4 offset-4">
                            <p class="text-center ">
                                Site réalisé par Grégory Errecart<br>
                                Merci à Yves Mongabure et Patrick Etcheverry pour leur aide                       
                            </p>
                        </div>
                        <div class="col-md-4 offset-4"></div>
                    </div>
                </div>
            </div>
        {% endblock %}
    </footer>

</html>
