{% extends 'base.html.twig' %}

{% block title %}{{parent()}} d'accueil !{% endblock %}
{% block header %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; text-align: center }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Inscription</h1>
    </div>
{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">       
        <div class="col-md-8 offset-2" >
            {{ form_start (vueFormulaire)}}
                {{ form_row (vueFormulaire.prenom, {'attr':{'placeholder':"Prenom de l'utilisateur"}})}}

                {{ form_row (vueFormulaire.nom,{'attr':{'placeholder':"Nom de l'utilisateur"}})}}

                {{ form_row (vueFormulaire.email,{'attr':{'placeholder':"Email de l'utilisateur"}})}}

                {{ form_row (vueFormulaire.password,{'attr':{'placeholder':"Mot de passe de l'utilisateur"}})}}

                <button type="submit" class="btn btn-dark">S'inscrire</button>
                
            {{ form_end (vueFormulaire)}}            
        </div>
        <div>
            <a href={{path('accueil')}} class="text-black">Revenir Ã  l'accueil</a>
        </div>
    </div>
</div>
{% endblock %}
