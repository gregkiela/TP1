{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{% endblock %}
{% block header %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; text-align: center }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Toutes les formations</h1>
    </div>
{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            {% for formation in formations %}
                <div class="card">
                    <h5 class="card-header">
                        <a href={{ path('tri_formation', {'id' : formation.id}) }}) class="text-black">{{formation.nomLong}}</a>
                    </h5>
                    <div class="card-body">
                        <p class="card-text"><b>Nom court :</b> {{formation.nomCourt}}</p>
                    </div>                        
                </div>                
            {% endfor %}
        </div>
        <div>
            <a href={{path('accueil')}} class="text-black">Revenir Ã  l'accueil</a>
        </div>
    </div>
</div>
    
{% endblock %}
